<% unless flash.empty? %>
  <% flash.each do |category, msg| %>
    <div class="alert alert-<%= category %> alert-dismissible fade show" role="alert">
      <div class="container">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% end %>
<% end %>
